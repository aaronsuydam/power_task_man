<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="PowerTaskMan.Controls.MetricsTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PowerTaskMan.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border
        Background="{ThemeResource BaseTileFillBrush}"
        BorderBrush="{ThemeResource ButtonBorderThemeBrush}"
        BorderThickness="0.5"
        CornerRadius="5">
        <Grid Padding="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Grid.mn="0"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="ThistileTitle!" />

            <ItemsRepeater>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="local:Metric">
                        <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                            <TextBlock
                                x:Name="PrimaryMetricName"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="{x:Bind Name}" />
                            <TextBlock
                                x:Name="PrimaryMetricValue"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="{x:Bind Value}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>

            </ItemsRepeater>
        </Grid>
    </Border>

</UserControl>
