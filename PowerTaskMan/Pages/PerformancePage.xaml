<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="power_task_man.Pages.PerformancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:PowerTaskMan.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:power_task_man.Pages"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Margin="20" ColumnSpacing="200">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2.5*" />
            <RowDefinition Height="2.5*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            Text="Performance" />

        <Border
            Grid.Row="1"
            Grid.Column="1"
            BorderBrush="DarkGray"
            BorderThickness="1"
            CornerRadius="5">

            <controls:GraphControlWin2D
                Title="Memory Use (%)"
                DataLabel="{x:Bind viewModel.UsedMemoryMBString, Mode=OneWay}"
                DataPoints="{x:Bind viewModel.MemoryUseChartSeries, Mode=OneWay}"
                DataPointColor="{StaticResource ColorMagentaRaw}"
                LineColor="{StaticResource ColorMagentaRaw}"
                UseIndexBasedGraphing="True" />

        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Height="250"
            BorderBrush="DarkGray"
            BorderThickness="1"
            CornerRadius="5">

            <controls:GraphControl
                Title="CPU Frequency (X.XXX GHz)"
                DataLabel="{x:Bind viewModel.CurrentFrequency, Mode=OneWay}"
                EasingFunction="{x:Null}"
                GraphSeries="{x:Bind viewModel.FrequencyHistoryChartSeries}"
                XAxes="{x:Bind FrequencyChartXAxes}"
                YAxes="{x:Bind FrequencyChartYAxes}" />
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            BorderBrush="DarkGray"
            BorderThickness="1"
            CornerRadius="5" />
    </Grid>
</Page>
