<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="power_task_man.Pages.PerformancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:PowerTaskMan.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:power_task_man.Pages"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Margin="20" ColumnSpacing="200">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2.5*" />
            <RowDefinition Height="2.5*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            Text="Performance" />

        <!--<controls:GraphControlWin2D
            Grid.Row="1"
            Grid.Column="1"
            Title="Memory Use (%)"
            DataLabel="{x:Bind viewModel.UsedMemoryMBString, Mode=OneWay}"
            DataPointColor="{StaticResource ColorMagentaRaw}"
            DataPoints="{x:Bind viewModel.MemoryUseChartSeries, Mode=OneWay}"
            LineColor="{StaticResource ColorMagentaRaw}"
            UseIndexBasedGraphing="True" />-->






        <controls:GraphControlWin2D
            Grid.Row="1"
            DataPointColor="{StaticResource ColorBlueRaw}"
            DataPoints="{x:Bind viewModel.CpuFrequencyChartSeries, Mode=OneWay}"
            LineColor="{StaticResource ColorBlueRaw}"
            UseIndexBasedGraphing="True" />


        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            BorderBrush="DarkGray"
            BorderThickness="1"
            CornerRadius="5" />
    </Grid>
</Page>
